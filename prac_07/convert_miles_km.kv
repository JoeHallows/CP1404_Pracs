BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '1'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: handle_increment(input_number.text, -1)
    Button:
        text: 'Convert M to KM'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)

